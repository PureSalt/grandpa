    "biguint-format": "^1.0.0",
    "body-parser": "^1.17.2",
    "express": "^4.15.3",
    "flake-idgen": "^1.1.0",
    "grunt": "^1.0.1",
    "grunt-cli": "^1.2.0",
    "grunt-contrib-jshint": "^1.1.0",
    "grunt-contrib-uglify": "^2.3.0",
    "grunt-webpack": "^1.0.18",
    "load-grunt-config": "^0.19.2",
    "load-grunt-tasks": "^3.5.2",
    "lodash": "^4.17.4",
    "uglify-js": "^2.8.29",
