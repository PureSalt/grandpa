  "description": "Source code for the video game NUMBER ONE GRANDPA by Pure Salt Gaming.",
  "author": "John Mullanaphy <john@jo.mu>",
  "version": "0.1.0-alpha",
  "bugs": {
    "url": "https://github.com/mullanaphy/grandpa/issues",
    "email": "john@jo.mu"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mullanaphy/grandpa.git"
  },
  "dependencies": {
    "babel-cli": "6.26.0",
    "babel-core": "6.26.0",
    "babel-loader": "7.1.2",
    "babel-preset-env": "1.6.1",
    "biguint-format": "1.0.0",
    "body-parser": "1.18.2",
    "express": "4.16.2",
    "flake-idgen": "1.1.0",
    "grunt": "1.0.1",
    "grunt-cli": "1.2.0",
    "grunt-contrib-jshint": "1.1.0",
    "grunt-contrib-uglify": "3.1.0",
    "grunt-webpack": "3.0.2",
    "load-grunt-config": "0.19.2",
    "load-grunt-tasks": "3.5.2",
    "lodash": "4.17.4",
    "pm2": "2.7.2",
    "uglify-js": "3.1.9",
    "webpack": "3.8.1"
  },
  "devDependencies": {
    "chai": "4.1.2",
    "grunt-contrib-watch": "1.0.0",
    "isparta": "4.0.0",
    "istanbul": "0.4.4",
    "jsdom": "11.3.0",
    "jsdom-global": "3.0.2",
    "mocha": "5.0.4",
    "sinon": "4.1.2"
  },
  "scripts": {
    "build": "./node_modules/.bin/grunt grandpa",
    "coverage": "npm run coverage-app;npm run coverage-server",
    "coverage-app": "babel-node ./node_modules/.bin/isparta cover --config=.istanbul.app.yml ./node_modules/.bin/_mocha -- --harmony --full-trace --check-leaks --recursive ./test/src/unit",
    "coverage-server": "babel-node ./node_modules/.bin/istanbul --config=.istanbul.server.yml cover ./node_modules/.bin/_mocha -- --harmony --full-trace --check-leaks --recursive ./test/server/unit",
    "restart": "npm stop;npm start",
    "start": "./node_modules/.bin/pm2 start pm2.yml",
    "stop": "./node_modules/.bin/pm2 stop pm2.yml",
    "test": "npm run test-app;npm run test-server",
    "test-app": "babel-node ./node_modules/.bin/istanbul test --config=.istanbul.app.yml ./node_modules/.bin/_mocha -- --check-leaks --recursive ./test/src/unit",
    "test-server": "./node_modules/.bin/istanbul test --config=.istanbul.server.yml ./node_modules/.bin/_mocha -- --full-trace --check-leaks --recursive ./test/server/unit",
    "watch": "./node_modules/.bin/grunt watch"
  }
}
