  "devDependencies": {
    "chai": "3.5.0",
    "grunt-contrib-watch": "^1.0.0",
    "istanbul": "0.4.5",
    "jsdom": "11.1.0",
    "jsdom-global": "3.0.2",
    "mocha": "2.2.5"
  },
  "scripts": {
    "build": "./node_modules/.bin/grunt grandpa",
    "coverage": "npm run coverage-app;npm run coverage-server",
    "coverage-app": "./node_modules/.bin/istanbul cover ./node_modules/.bin/_mocha -- --harmony --full-trace --check-leaks --recursive ./test/src/unit",
    "coverage-server": "./node_modules/.bin/istanbul cover ./node_modules/.bin/_mocha -- --harmony --full-trace --check-leaks --recursive ./test/server/unit",
    "start": "NODE_ENV=development node server/app.js grandpa-server",
    "stop": "killall -SIGINT grandpa-server",
    "test": "npm run test-app;npm run test-server",
    "test-app": "./node_modules/.bin/istanbul test ./node_modules/.bin/_mocha -- --harmony --full-trace --check-leaks --recursive ./test/src/unit",
    "test-server": "./node_modules/.bin/istanbul test ./node_modules/.bin/_mocha -- --harmony --full-trace --check-leaks --recursive ./test/server/unit",
    "watch": "./node_modules/.bin/grunt watch"
  }
}
